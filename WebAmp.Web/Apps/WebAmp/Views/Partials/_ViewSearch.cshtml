<section class="wa-view wa-view--search" data-wa-view="search" aria-label="Search">
    <div class="wa-view__header">
        <h1 class="wa-h1">Search</h1>
        <p class="wa-lede">Search Spotify and play tracks.</p>
        <div class="wa-view__actions" data-wa-queue-actions style="display:none">
            <label class="comp-toggle" aria-label="Shuffle">
                <input type="checkbox" class="comp-toggle-input" data-wa-action="shuffle-toggle" />
                <span class="comp-toggle-track" aria-hidden="true">
                    <span class="comp-toggle-thumb"></span>
                </span>
                <span>Shuffle</span>
            </label>
            <button type="button" class="wa-btn wa-btn--primary" data-wa-action="queue-play" aria-label="Play">
                ▶ Play
            </button>
        </div>
    </div>

    <div class="wa-searchbar" role="search" aria-label="Search Spotify">
        <form data-wa-search-form>
            <div class="wa-searchbar__row">
                <input class="wa-searchbar__input" data-wa-search-input type="search" placeholder="Search songs, artists, albums, playlists…" autocomplete="off" />
                <button type="submit" class="wa-btn wa-btn--primary wa-searchbar__btn" aria-label="Search">
                    <img class="wa-searchbar__icon" src="~/apps/webamp/assets/svg/search-filled.svg" asp-append-version="true" alt="" aria-hidden="true" />
                    <span class="wa-sr-only">Search</span>
                </button>
            </div>
        </form>
    </div>

    <div class="wa-card wa-card--glass" data-wa-search-results-card style="display:none">
        <div class="wa-copy" data-wa-search-status></div>
        <div class="wa-list" data-wa-search-results aria-label="Search results"></div>
    </div>
</section>
