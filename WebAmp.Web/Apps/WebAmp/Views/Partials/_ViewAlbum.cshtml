<section class="wa-view wa-view--album" data-wa-view="album" aria-label="Album">
    <div class="wa-view__header">
        <h1 class="wa-h1">Album</h1>
        <p class="wa-lede">
            Viewing: <span data-wa-entity-id>(none)</span>
        </p>
    </div>

    <div class="wa-grid wa-grid--2">
        <div class="wa-card wa-card--glass">
            <h2 class="wa-h2">Details</h2>
            <p class="wa-copy">Album metadata scaffold.</p>
        </div>
        <div class="wa-card wa-card--glass">
            <h2 class="wa-h2">Tracks</h2>
            <div class="wa-list" aria-label="Album tracks">
                <button type="button" class="wa-listitem" data-wa-track="1">
                    <span class="wa-listitem__title">Track 1</span>
                    <span class="wa-listitem__meta">3:12</span>
                </button>
                <button type="button" class="wa-listitem" data-wa-track="2">
                    <span class="wa-listitem__title">Track 2</span>
                    <span class="wa-listitem__meta">2:58</span>
                </button>
            </div>
        </div>
    </div>
</section>
