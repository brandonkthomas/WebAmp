<section class="wa-view wa-view--playlist" data-wa-view="playlist" aria-label="Playlists">
    <h1 class="wa-h1 wa-sr-only" data-wa-view-title>Playlists</h1>

    <div class="wa-card wa-card--glass" data-wa-playlist-detail style="display:none">
        <div class="wa-entityheader">
            <div class="wa-entityheader__art">
                <img data-wa-playlist-img class="wa-entityheader__img" alt="" />
            </div>
            <div class="wa-entityheader__text">
                <h2 class="wa-entityheader__title" data-wa-playlist-title>Playlist</h2>
                <div class="wa-entityheader__meta" data-wa-playlist-meta></div>
            </div>
        </div>
    </div>

    <div class="wa-card wa-card--glass" data-wa-playlists-card>
        <h2 class="wa-h2">All Playlists</h2>
        <div class="wa-copy" data-wa-playlists-status></div>
        <div class="wa-list" data-wa-playlists-list aria-label="Your playlists"></div>
    </div>

    <div class="wa-card wa-card--glass" data-wa-playlist-tracks-card style="display:none">
        <h2 class="wa-h2">Tracks</h2>
        <div class="wa-copy" data-wa-playlist-tracks-status></div>
        <div class="wa-list" data-wa-playlist-tracks aria-label="Playlist tracks"></div>
    </div>
</section>
