<section class="wa-view wa-view--artist" data-wa-view="artist" aria-label="Artists">
    <div class="wa-view__header">
        <div class="wa-view__titlebar">
            <div class="wa-view__navbuttons">
                <button type="button" class="wa-btn wa-btn--icon" data-wa-nav-back aria-label="Back">
                    <span aria-hidden="true">←</span>
                </button>
                <button type="button" class="wa-btn wa-btn--icon" data-wa-nav-forward aria-label="Forward">
                    <span aria-hidden="true">→</span>
                </button>
            </div>
            <p class="wa-lede wa-breadcrumbs" data-wa-breadcrumbs></p>
        </div>
        <h1 class="wa-h1 wa-sr-only" data-wa-view-title>Artists</h1>
        <div class="wa-view__actions" data-wa-queue-actions style="display:none">
            <label class="comp-toggle" aria-label="Shuffle">
                <input type="checkbox" class="comp-toggle-input" data-wa-action="shuffle-toggle" />
                <span class="comp-toggle-track comp-toggle-large" aria-hidden="true">
                    <span class="comp-toggle-thumb">
                        <img src="~/apps/webamp/assets/svg/shuffle-filled.svg" asp-append-version="true" alt="" aria-hidden="true" />
                    </span>
                </span>
            </label>
            <button type="button" class="wa-btn wa-btn--icon" data-wa-action="queue-play" aria-label="Play">
                ▶ Play
            </button>
        </div>
    </div>

        <div class="wa-card wa-card--glass" data-wa-artists-card>
        <h2 class="wa-h2">Followed Artists</h2>
        <div class="wa-copy" data-wa-artists-status></div>
        <div class="wa-list" data-wa-artists-list aria-label="Followed artists"></div>
        </div>

    <div class="wa-card wa-card--glass" data-wa-artist-detail style="display:none">
        <div class="wa-entityheader">
            <div class="wa-entityheader__art wa-entityheader__art--round">
                <img data-wa-artist-img class="wa-entityheader__img" alt="" />
            </div>
            <div class="wa-entityheader__text">
                <h2 class="wa-entityheader__title" data-wa-artist-name>Artist</h2>
                <div class="wa-entityheader__meta" data-wa-artist-meta></div>
            </div>
        </div>
    </div>

    <div class="wa-card wa-card--glass" data-wa-artist-toptracks-card style="display:none">
        <h2 class="wa-h2">Top tracks</h2>
        <div class="wa-copy" data-wa-artist-toptracks-status></div>
        <div class="wa-list" data-wa-artist-toptracks aria-label="Top tracks"></div>
    </div>

    <div class="wa-card wa-card--glass" data-wa-artist-albums-card style="display:none">
        <h2 class="wa-h2">Albums</h2>
        <div class="wa-copy" data-wa-artist-albums-status></div>
        <div class="wa-list" data-wa-artist-albums aria-label="Artist albums"></div>
    </div>

    <div class="wa-card wa-card--glass" data-wa-artist-singles-card style="display:none">
        <h2 class="wa-h2">Singles</h2>
        <div class="wa-copy" data-wa-artist-singles-status></div>
        <div class="wa-list" data-wa-artist-singles aria-label="Artist singles"></div>
    </div>
</section>
