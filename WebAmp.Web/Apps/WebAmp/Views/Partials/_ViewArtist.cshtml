<section class="wa-view wa-view--artist" data-wa-view="artist" aria-label="Artist">
    <div class="wa-view__header">
        <h1 class="wa-h1">Artist</h1>
        <p class="wa-lede">
            Viewing: <span data-wa-entity-id>(none)</span>
        </p>
    </div>

    <div class="wa-grid wa-grid--2">
        <div class="wa-card wa-card--glass">
            <h2 class="wa-h2">Top tracks</h2>
            <div class="wa-list" aria-label="Top tracks">
                <button type="button" class="wa-listitem" data-wa-track="1">
                    <span class="wa-listitem__title">Track 1</span>
                    <span class="wa-listitem__meta">3:12</span>
                </button>
                <button type="button" class="wa-listitem" data-wa-track="2">
                    <span class="wa-listitem__title">Track 2</span>
                    <span class="wa-listitem__meta">2:58</span>
                </button>
            </div>
        </div>

        <div class="wa-card wa-card--glass">
            <h2 class="wa-h2">Albums</h2>
            <div class="wa-list" aria-label="Artist albums">
                <button type="button" class="wa-listitem" data-wa-nav-href="/webamp/albums/1">
                    <span class="wa-listitem__title">Album #1</span>
                    <span class="wa-listitem__meta">Open</span>
                </button>
                <button type="button" class="wa-listitem" data-wa-nav-href="/webamp/albums/2">
                    <span class="wa-listitem__title">Album #2</span>
                    <span class="wa-listitem__meta">Open</span>
                </button>
            </div>
        </div>
    </div>
</section>
