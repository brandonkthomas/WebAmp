<section class="wa-view wa-view--home" data-wa-view="home" aria-label="Home">
    <div class="wa-view__header">
        <h1 class="wa-h1">Home</h1>
        <p class="wa-lede">Your library shortcuts and recents (scaffold).</p>
    </div>

    <div class="wa-grid wa-grid--3">
        <a class="wa-card wa-card--link" href="/webamp/playlists" data-wa-nav="playlist">
            <h3 class="wa-h3">Playlists</h3>
            <p class="wa-copy">Browse your playlists.</p>
        </a>
        <a class="wa-card wa-card--link" href="/webamp/albums" data-wa-nav="album">
            <h3 class="wa-h3">Albums</h3>
            <p class="wa-copy">Browse albums.</p>
        </a>
        <a class="wa-card wa-card--link" href="/webamp/artists" data-wa-nav="artist">
            <h3 class="wa-h3">Artists</h3>
            <p class="wa-copy">Browse artists.</p>
        </a>
    </div>

    <div class="wa-card wa-card--glass">
        <h2 class="wa-h2">Recent</h2>
        <div class="wa-list" aria-label="Recent items">
            <button type="button" class="wa-listitem" data-wa-nav-href="/webamp/albums/1">
                <span class="wa-listitem__title">Album #1</span>
                <span class="wa-listitem__meta">Sample album</span>
            </button>
            <button type="button" class="wa-listitem" data-wa-nav-href="/webamp/artists/1">
                <span class="wa-listitem__title">Artist #1</span>
                <span class="wa-listitem__meta">Sample artist</span>
            </button>
            <button type="button" class="wa-listitem" data-wa-nav-href="/webamp/playlists/1">
                <span class="wa-listitem__title">Playlist #1</span>
                <span class="wa-listitem__meta">Sample playlist</span>
            </button>
        </div>
    </div>
</section>
