@{
    ViewData["Title"] = "WebAmp";
}

<section class="wa-app" data-wa-app>
    <div class="glass-surface wa-shell" role="application" aria-label="WebAmp">
        <div class="glass-surface__content wa-shell__content">
            <div class="wa-layout" data-wa-layout>
                @await Html.PartialAsync("~/Apps/WebAmp/Views/Partials/_Sidebar.cshtml")

                <div class="wa-content">
                    <header class="wa-topbar" aria-label="WebAmp top bar">
                        <button type="button" class="wa-iconbtn wa-topbar__burger" data-wa-sidebar-toggle aria-label="Open menu">
                            <span aria-hidden="true">â˜°</span>
                        </button>
                        <div class="wa-topbar__title" aria-label="Current section">
                            <span data-wa-topbar-title>WebAmp</span>
                        </div>
                    </header>

                    <main class="wa-main" aria-label="WebAmp content">
                        <div class="wa-view-host" data-wa-view-host></div>

                        <!-- Server-rendered templates (cloned/mounted by TS). Keep markup in CSHTML partials. -->
                        <template id="wa-tpl-landing">
                            @await Html.PartialAsync("~/Apps/WebAmp/Views/Partials/_ViewLanding.cshtml")
                        </template>
                        <template id="wa-tpl-home">
                            @await Html.PartialAsync("~/Apps/WebAmp/Views/Partials/_ViewHome.cshtml")
                        </template>
                        <template id="wa-tpl-search">
                            @await Html.PartialAsync("~/Apps/WebAmp/Views/Partials/_ViewSearch.cshtml")
                        </template>
                        <template id="wa-tpl-liked">
                            @await Html.PartialAsync("~/Apps/WebAmp/Views/Partials/_ViewLiked.cshtml")
                        </template>
                        <template id="wa-tpl-playlist">
                            @await Html.PartialAsync("~/Apps/WebAmp/Views/Partials/_ViewPlaylist.cshtml")
                        </template>
                        <template id="wa-tpl-album">
                            @await Html.PartialAsync("~/Apps/WebAmp/Views/Partials/_ViewAlbum.cshtml")
                        </template>
                        <template id="wa-tpl-artist">
                            @await Html.PartialAsync("~/Apps/WebAmp/Views/Partials/_ViewArtist.cshtml")
                        </template>
                    </main>
                </div>
            </div>

            <div class="wa-sidebar-overlay" data-wa-sidebar-overlay aria-hidden="true"></div>

            @await Html.PartialAsync("~/Apps/WebAmp/Views/Partials/_PlayerBar.cshtml")
        </div>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/components/glassSurface.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components/dialogs.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components/toggleSwitch.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/apps/webamp/css/webamp.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/apps/webamp/dist/js/webamp.js" type="module" asp-append-version="true"></script>
}
